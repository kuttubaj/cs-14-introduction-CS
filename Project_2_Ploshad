print("Добро пожаловать в программу расчета площади!")
print("Выберите фигуру, для которой хотите рассчитать площадь:")
print("1. Треугольник")
print("2. Квадрат")
print("3. Круг")

choice = input("Введите номер выбранной фигуры (1/2/3): ")

if choice == "1":
    print("\nВы выбрали Треугольник.")
    base = float(input("Введите длину основания (см): "))
    height = float(input("Введите высоту (см): "))
    area = 0.5 * base * height
    print(f"Площадь треугольника: {area:.2f} см²")

elif choice == "2":
    print("\nВы выбрали Квадрат.")
    side = float(input("Введите длину стороны (см): "))
    area = side ** 2
    print(f"Площадь квадрата: {area:.2f} см²")

elif choice == "3":
    print("\nВы выбрали Круг.")
    radius = float(input("Введите радиус (см): "))
    area = 3.14159 * radius ** 2
    print(f"Площадь круга: {area:.2f} см²")

else:
    print("\nНеверный ввод. Пожалуйста, выберите 1, 2 или 3.")
